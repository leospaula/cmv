<%= form_for @post, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :slug, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :slug, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content_md, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :content_md, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :content_html, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :content_html, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :draft, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :draft, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  posts_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
