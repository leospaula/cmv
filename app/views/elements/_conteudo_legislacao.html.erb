  <%- model_class = Legislacao -%>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:numero) %></th>
      <th><%= model_class.human_attribute_name(:ano) %></th>
      <th><%= model_class.human_attribute_name(:tipo) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @legislacoes.each do |legislacao| %> 
     <tr>
      <td><%= legislacao.numero %></td>
      <td><%= legislacao.ano %></td>
      <td><%= legislacao.tipo %></td>
      <td>
        <%= link_to legislacao.arquivo_url, :target => '_blank', :class => 'btn btn-md', :title => "Visualizar" do %>
          <%= glyph 'download-alt' %>
        <%- end -%>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= will_paginate @legislacoes, renderer: BootstrapPagination::Rails %>
