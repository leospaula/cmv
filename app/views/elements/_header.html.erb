<header>
<div class="container">
	<div id= "header">
		<div id="top-bar">
			<div class="row">
				<div class="col-md-9">
					<p>Seja bem vindo caro visitante...</p>
				</div>
				<div class="col-md-3">
					<p><i class="fa fa-calendar"> <%= Date::DAYNAMES[Time.now.wday]%>, <%= Time.now.to_s(:header) %></i></p>
				</div>
			</div>
		</div>
		<div class = "row">
			<div class = "col-md-10">
				<div id="logo">
					<a href='/'><%= image_tag 'logo.png' %></a>
				</div>
			</div>
			<div class = "col-md-2">
				<div id="social-link" class="center-block">
					<ul>
						<li><a href="#"><%= image_tag 'facebook.png' %></a></li>
						<li><a href="#"><%= image_tag 'twitter.png' %></a></li>
					</ul>
				</div>
			</div>
		</div>
	</div>
	<%= render partial: "elements/navigation" %>
</div>
</header>