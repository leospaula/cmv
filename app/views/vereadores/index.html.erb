<div class="row">
   <div class="col-md-9">
		<section id="vereadores">
		  <h3>Vereadores</h3>
		      <ul>
		        <% @vereadores.each do |vereador| %>
		          <li><%= link_to image_tag(vereador.avatar_url(:thumb), :class => 'img-thumbnail'), vereador %><br/>
		          	<div class="nome">
		              <strong><%= vereador.nome %></strong>
		              <strong>(<%= vereador.partido %>)</strong>
		            </div>
		          </li>
		        <% end %>
		      </ul>
		</section>
	</div>
	<div class="col-md-3">
		<%= render partial: "elements/sidebar_menu" %>
	</div>
</div>
