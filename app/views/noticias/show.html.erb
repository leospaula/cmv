<div class="container">
<section class="row">
	<div class="col-md-9">
		<div class="noticia-main">
		  <article>
		    <p class="small_date_box"><%= l @noticia.created_at, format: "%A , %d de %B, %Y" %></p>
		    <h2 class="post"><%= @noticia.titulo %><br/><small><%= @noticia.introducao.html_safe %></small></h2>
		    <br/>
		    <div> <%= @noticia.conteudo.html_safe %></div>
		    
		  </article>
	  </div>
  </div>
  <div class="col-md-3">
  	<div class="noticia-sidebar">
	  	<% if @noticiastitle.any? %>
	  		<h3>Ultimas Not√≠cias</h3>
	  		<ul>
		  	<% @noticiastitle.each do |noticia| %>		    
		  		<li><h6><span class="glyphicon glyphicon-chevron-right"></span><a href="/noticias/<%= noticia.to_url %>"> <%= noticia.titulo %></a></h6></li>
				<% end %>
				</ul>
			<% end %>
		</div>
  </div>
</section>
</div>
