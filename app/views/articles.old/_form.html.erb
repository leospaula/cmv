<%= simple_form_for(@article) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :introduction %>
    <%= f.input :body %>
    <%= f.input :permalink %>
    <%= f.input :status %>
    <%= f.input :cover %>
    <%= f.input :published_in %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
